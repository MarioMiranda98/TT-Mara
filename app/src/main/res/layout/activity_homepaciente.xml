<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepaciente">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="844dp"
        android:background="@drawable/fondoprincipal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textwelcomehome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Bienvenido a su perfil"
            android:textAlignment="center"
            android:textColor="#4D278F"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonPasign"
            android:layout_width="171dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/botonpruebasasignadas" />

        <TextView
            android:id="@+id/textPasignadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Pruebas asignadas"
            android:textAlignment="center"
            android:textColor="#452087"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonPrespon"
            android:layout_width="168dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/botonpruebacontestada" />

        <TextView
            android:id="@+id/textPcontestadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Pruebas contestadas"
            android:textAlignment="center"
            android:textColor="#452087"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>